# EditorConfig for OpenCMMC Stack
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4

# YAML / Ansible / Terraform files
[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2
[*.tf]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Mermaid diagrams
[*.mmd]
indent_size = 2
